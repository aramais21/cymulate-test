{
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 120,
  "endOfLine": "auto",
  "semi": false,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": ["*.json", ".eslintrc", ".prettierrc"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
